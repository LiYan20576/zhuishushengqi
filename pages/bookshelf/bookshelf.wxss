.contianer2 {
  display: flex;
  flex-wrap: wrap;
}
.contianer2 .book {
  position: relative;
  padding-top: 5%;
  width: 22.5%;
  height: 200rpx;
  margin-left: 2%;
  margin-bottom: 40rpx;
  text-align: center;
}
.contianer2 .book .img {
  height: 180px;
  width: 80%;
}
.contianer2 .book .title {
  font-size: 12rpx;
  text-align: center;
}
.contianer2 .book .btn {
  position: absolute;
  top: 30rpx;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
  line-height: 15rpx;
  text-align: center;
  font-size: 20rpx;
  color: white;
}
